#include<stdio.h>
int pascal(int n) {
	int k;
	for(int i=1;i<=n;i++){
		for(int j=1;j<=n-i;j++){
			printf(" ");
		}
		int coff=1;
		for(k=1;k<=i;k++){
		
		printf("%4d",coff);
		 coff=coff*(i-k)/k;
		 k;
	} 
	printf("\n");
}
}
int main(){
	int n;
	printf("enter the size");
	scanf("%d",&n);
	pascal(n);
	return 0;
}
