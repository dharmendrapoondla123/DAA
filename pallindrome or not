#include <stdio.h>
#include <string.h>

int main()
{
    char string[10],i,l;
    int flag=0;
    printf("enter a string:");
    scanf("%s",string);
    l=strlen(string);
    for(i=0;i<l;i++){
    	if(string[i]!=string[l-i-1]){
    		flag=1;
    		break;
		}
	}
	if(flag)
	printf("%s the string is  not apallindrome",string);
	else
	printf("%s the string is pallindrome",string);
     
 
} 
